{
    "version": 4,
    "configurePresets": [
        {
            "name": "windows-vs2026",
            "displayName": "Windows Visual Studio 2026",
            "description": "Windows Visual Studio 2026 with automatic Conan dependency installation",
            "generator": "Visual Studio 18 2026",
            "binaryDir": "${sourceDir}/build/windows-vs2026/build",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "v143",
                "strategy": "external"
            },
            "toolchainFile": "${sourceDir}/cmake/ConanToolchainWrapper.cmake",
            "cacheVariables": {
                "CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
            }
        },
        {
            "name": "ubuntu-ninja",
            "displayName": "Ubuntu Ninja",
            "description": "Ubuntu Linux with Ninja build system and automatic Conan dependency installation",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/ubuntu-ninja/build",
            "toolchainFile": "${sourceDir}/build/ubuntu-ninja/build/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-vs2026-debug",
            "displayName": "Windows Visual Studio 2026 - Debug",
            "configurePreset": "windows-vs2026",
            "configuration": "Debug",
            "jobs": 16
        },
        {
            "name": "ubuntu-ninja-debug",
            "displayName": "Ubuntu Ninja - Debug",
            "configurePreset": "ubuntu-ninja",
            "configuration": "Debug",
            "jobs": 16
        },
        {
            "name": "ubuntu-ninja-release",
            "displayName": "Ubuntu Ninja - Release",
            "configurePreset": "ubuntu-ninja",
            "configuration": "Release",
            "jobs": 16
        }
    ],
    "testPresets": [
        {
            "name": "windows-vs2026-debug",
            "displayName": "Windows Visual Studio 2026 - Debug",
            "configurePreset": "windows-vs2026",
            "configuration": "Debug",
            "execution": {
                "jobs": 16
            }
        },
        {
            "name": "ubuntu-ninja-debug",
            "displayName": "Ubuntu Ninja - Debug",
            "configurePreset": "ubuntu-ninja",
            "configuration": "Debug",
            "execution": {
                "jobs": 16
            }
        },
        {
            "name": "ubuntu-ninja-release",
            "displayName": "Ubuntu Ninja - Release",
            "configurePreset": "ubuntu-ninja",
            "configuration": "Release",
            "execution": {
                "jobs": 16
            }
        }
    ]
}